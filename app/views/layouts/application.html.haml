      #exCollapsingNavbar2.collapse.navbar-toggleable-md
        %ul.nav.navbar-nav
          %li.nav-item.active
            %a.nav-link{ href: "#" }
              All Podcasts
              %span.sr-only
                (current)
          %li.nav-item
            %a.nav-link{ href: "#" } My Subscriptions
        %ul.nav.navbar-nav.pull-xsright
          %li.nav-item.pull-xs-left
            %form.form-inline.search-form
              .input-group
                %input#search.form-control{ type: "search", placeholder: "Search" }
                %span.input-group-btn
                  %button.btn.btn-default{ type: "button" } Search
          %li.nav-item.pull-xs-right
            %a.google-login{ href: "#" }
              %img{ src: asset_path("btn_google_signin_light_normal_web.png") }

    .container-fluid.cont
      .row  
        = yield

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

